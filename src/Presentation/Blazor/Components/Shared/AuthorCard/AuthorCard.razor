@if (Author != null)
{
    <div class="card">
        <div class="card-body">                       
            <div class="mt-3">
                @if (!string.IsNullOrEmpty(Author.Birth_date) || !string.IsNullOrEmpty(Author.Death_date))
                {
                    <p>
                        <strong>Lived:</strong> 
                        @(!string.IsNullOrEmpty(Author.Birth_date) ? Author.Birth_date : "Unknown") - 
                        @(!string.IsNullOrEmpty(Author.Death_date) ? Author.Death_date : "Present")
                    </p>
                }
                
                @if (!string.IsNullOrEmpty(Author.Bio))
                {
                    <p class="mt-3">@Author.Bio</p>
                }
                
                <div class="mt-3">                @if (!string.IsNullOrEmpty(Author.OfficialSite))
                {
                    <a href="@Author.OfficialSite" target="_blank" class="btn btn-outline-primary btn-sm me-2">
                        <i class="bi bi-globe"></i> Official Website
                    </a>
                }
                
                @if (!string.IsNullOrEmpty(Author.Wikipedia))
                {
                    <a href="@Author.Wikipedia" target="_blank" class="btn btn-outline-info btn-sm">
                        <i class="bi bi-wikipedia"></i> Wikipedia
                    </a>
                }
                </div>
            </div>
        </div>
    </div>
}
